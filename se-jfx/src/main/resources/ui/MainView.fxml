<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane minHeight="0.0" minWidth="0.0" pannable="true" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <AnchorPane>
         <children>
            <BorderPane minHeight="0.0" minWidth="0.0" prefHeight="700.0" prefWidth="1000.0">
            
               <!-- ===== TOP BAR ===== -->
               <top>
                  <VBox minHeight="0.0" minWidth="0.0" spacing="4">
                     <HBox prefHeight="3.0" prefWidth="1000.0">
                        <children>
                           <Button text="Load File">
                              <HBox.margin>
                                 <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                              </HBox.margin>
                           </Button>
                           <Label prefHeight="27.0" prefWidth="57.0" text="File path">
                              <HBox.margin>
                                 <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                              </HBox.margin>
                           </Label>
                        </children>
                     </HBox>
                     <ToolBar>
      
                        <Label text="Program/Function:" />
                        <ComboBox prefWidth="160" />
      
                        <Separator orientation="VERTICAL" />
      
                        <Label text="Degree:" />
                        <ComboBox layoutX="113.0" layoutY="10.0" prefWidth="160" />
      
                        <Separator orientation="VERTICAL" />
                        <Label layoutX="287.0" layoutY="14.0" text="Highlight selection" />
                        <ComboBox layoutX="333.0" layoutY="10.0" prefWidth="160" />
                     </ToolBar>
                  </VBox>
               </top>
            
               <!-- ===== CENTER: LEFT/RIGHT SPLIT ===== -->
               <center>
                  <SplitPane dividerPositions="0.68" minHeight="0.0" minWidth="0.0">
            
                     <!-- LEFT SIDE -->
                     <VBox spacing="8">
                        <padding>
                           <Insets bottom="8" left="8" right="8" top="8" />
                        </padding>
            
                        <!-- Instructions table -->
                        <TableView VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn prefWidth="50" text="#" />
                              <TableColumn prefWidth="60" text="B/S" />
                              <TableColumn prefWidth="110" text="Label" />
                              <TableColumn prefWidth="320" text="Instruction" />
                              <TableColumn prefWidth="80" text="Cycles" />
                           </columns>
                        </TableView>
            
                        <!-- Summary line -->
                        <Label alignment="CENTER" prefHeight="29.0" prefWidth="665.0" style="-fx-background-color:#e5e5e5; -fx-padding:6;" text="Summary line" />
            
                        <!-- Selected instruction history chain -->
                        <TitledPane expanded="true" text="Selected Instruction History Chain">
                           <content>
                              <TableView prefHeight="120">
                                 <columns>
                                    <TableColumn text="Origin" />
                                    <TableColumn text="Expanded" />
                                 </columns>
                              </TableView>
                           </content>
                        </TitledPane>
                     </VBox>
            
                     <!-- RIGHT SIDE -->
                     <VBox spacing="10">
                        <padding>
                           <Insets bottom="8" left="0" right="8" top="8" />
                        </padding>
            
                        <!-- Debugger / Execution -->
                        <TitledPane expanded="true" text="Debugger / Execution">
                           <content>
                              <VBox spacing="8">
                                 <padding>
                                    <Insets bottom="8" left="8" right="8" top="8" />
                                 </padding>
                                 <HBox spacing="8">
                                    <Button text="Run" />
                                    <Button text="Debug" />
                                    <Button text="Stop" />
                                    <Button text="Resume" />
                                    <Button text="Step Over" />
                                 </HBox>
                              </VBox>
                           </content>
                           <VBox.margin>
                              <Insets left="5.0" />
                           </VBox.margin>
                        </TitledPane>
            
                        <HBox spacing="8">
                           <!-- Variables -->
                           <TitledPane expanded="true" text="Variables" HBox.hgrow="ALWAYS">
                              <content>
                                 <TableView>
                                    <columns>
                                       <TableColumn prefWidth="91.0" text="Var" />
                                       <TableColumn prefWidth="87.0" text="Value" />
                                    </columns>
                                 </TableView>
                              </content>
                              <HBox.margin>
                                 <Insets left="5.0" />
                              </HBox.margin>
                           </TitledPane>
            
                           <!-- Execution Inputs -->
                           <TitledPane expanded="true" text="Execution Inputs" HBox.hgrow="ALWAYS">
                              <content>
                                 <VBox spacing="6">
                                    <padding>
                                       <Insets bottom="8" left="8" right="8" top="8" />
                                    </padding>
                                    <Label text="Enter inputs (comma separated):" />
                                    <TextField promptText="x1,x2,x3" />
                                 </VBox>
                              </content>
                           </TitledPane>
                        </HBox>
            
                        <HBox spacing="6">
                           <Label text="Cycles:">
                              <HBox.margin>
                                 <Insets left="3.0" />
                              </HBox.margin>
                           </Label>
                           <Label text="0" />
                        </HBox>
            
                        <!-- History / Statistics -->
                        <TitledPane expanded="true" text="History / Statistics" VBox.vgrow="ALWAYS">
                           <content>
                              <VBox spacing="8">
                                 <padding>
                                    <Insets bottom="6" left="6" right="6" top="6" />
                                 </padding>
                                 <TableView VBox.vgrow="ALWAYS">
                                    <columns>
                                       <TableColumn prefWidth="52.0" text="Run #" />
                                       <TableColumn prefWidth="87.0" text="Inputs" />
                                       <TableColumn prefWidth="70.0" text="y" />
                                       <TableColumn prefWidth="83.0" text="Cycles" />
                                    </columns>
                                 </TableView>
                                 <HBox spacing="8">
                                    <Button disable="true" text="Show" />
                                    <Button disable="true" text="Re-Run" />
                                 </HBox>
                              </VBox>
                           </content>
                           <VBox.margin>
                              <Insets left="5.0" />
                           </VBox.margin>
                        </TitledPane>
                     </VBox>
                  </SplitPane>
               </center>
            
            </BorderPane>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
